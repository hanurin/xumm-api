    "@types/express": "^4.17.13",
    "@types/node": "^17.0.19",
    "@types/ws": "^8.5.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "xrpl": "^2.1.1",
    "xrpl-client": "^1.9.5",
    "xumm-sdk": "^1.0.3",
    "yarn": "^1.22.18"
  }
